# TokenGuard Microservice Environment Configuration
# Copy this file to .env and update the values as needed

# Core Pruning Configuration
TOKENGUARD_CONFIDENCE_THRESHOLD=0.7
TOKENGUARD_MAX_LENGTH=800
TOKENGUARD_MIN_LENGTH=200
TOKENGUARD_UNCERTAINTY_THRESHOLD=0.25
TOKENGUARD_CHECK_INTERVAL_TOKENS=5
TOKENGUARD_TRAILING_TOKENS_WINDOW=5

# Server Configuration
TOKENGUARD_HOST=0.0.0.0
TOKENGUARD_PORT=8000

# Logging Configuration
TOKENGUARD_LOG_LEVEL=INFO
TOKENGUARD_LOG_FORMAT=json

# Performance & Monitoring
TOKENGUARD_ENABLE_METRICS=true
TOKENGUARD_RATE_LIMIT_REQUESTS=100
TOKENGUARD_RATE_LIMIT_WINDOW=60

# Security Configuration
# TOKENGUARD_API_KEY=your-secure-api-key-here
TOKENGUARD_CORS_ORIGINS=*

# Example production settings (uncomment and modify as needed):
# TOKENGUARD_CONFIDENCE_THRESHOLD=0.7
# TOKENGUARD_MAX_LENGTH=1000
# TOKENGUARD_LOG_LEVEL=INFO
# TOKENGUARD_LOG_FORMAT=json
# TOKENGUARD_API_KEY=prod-api-key-32chars-min
# TOKENGUARD_CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
# TOKENGUARD_RATE_LIMIT_REQUESTS=1000