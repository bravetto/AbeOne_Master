# CodeGuardians Gateway - Unified Environment Configuration
# This file contains all environment variables for the unified gateway setup

# Core Application
PYTHONUNBUFFERED=1
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
# NOTE: These are example values - replace with real values in your .env file
# NEVER commit real credentials to version control
DATABASE_URL=postgresql://codeguardians-gateway:CHANGE-ME-POSTGRES-PASSWORD@postgres:5432/codeguardians-gateway_db
POSTGRES_USER=codeguardians-gateway
POSTGRES_PASSWORD=CHANGE-ME-POSTGRES-PASSWORD
POSTGRES_DB=codeguardians-gateway_db

# Redis Configuration
# NOTE: Use REDIS_PASSWORD environment variable instead of embedding in URL
REDIS_PASSWORD=CHANGE-ME-REDIS-PASSWORD
REDIS_URL=REPLACE_MEredis:6379/0
CONTEXTGUARD_REDIS_URL=REPLACE_MEredis:6379/0

# Security
# NOTE: These are placeholder values - replace with real values in your .env file
# Generate secure keys using: openssl rand -hex 32
SECRET_KEY=CHANGE-ME-SECRET-KEY-MINIMUM-32-CHARACTERS-LONG
JWT_SECRET_KEY=CHANGE-ME-JWT-SECRET-KEY-MINIMUM-32-CHARACTERS-LONG
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=
S3_ENABLED=false

# Clerk Authentication (Optional)
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=

# Stripe (Optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Guard Service URLs (All services use port 8000 on internal network)
TOKENGUARD_URL=http://tokenguard:8000
TRUSTGUARD_URL=http://trustguard:8000
CONTEXTGUARD_URL=http://contextguard:8003
BIASGUARD_URL=http://biasguard:8000
HEALTHGUARD_URL=http://healthguard:8000

# Clerk Authentication (Clerk JWT tokens used as unified API key)
CLERK_ENABLED=true
CLERK_SECRET_KEY=CHANGE-ME-CLERK-SECRET-KEY
CLERK_PUBLISHABLE_KEY=CHANGE-ME-CLERK-PUBLISHABLE-KEY

# Unified API Key (fallback - used when Clerk is disabled)
# When Clerk is enabled, Clerk JWT tokens become the unified API key
# NOTE: Set this via environment variable - never commit real keys to version control
UNIFIED_API_KEY=CHANGE-ME-IN-PRODUCTION-UNIFIED-API-KEY

# Internal Testing
INTERNAL_TESTING_ENABLED=true
INTERNAL_TESTING_JWT_TOKEN=test-token-for-development

# CORS
ALLOWED_HOSTS=localhost,127.0.0.1,api.aiguardian.ai

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
