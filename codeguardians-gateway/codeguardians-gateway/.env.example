# =============================================================================
# CodeGuardians Gateway - Production Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your production values
# For AWS deployment, update all values marked with "CHANGE_ME"
# =============================================================================

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=production
DOCKER_TARGET=production
VERSION=latest

# =============================================================================
# SECURITY (REQUIRED)
# =============================================================================
# IMPORTANT: Generate a secure random string of at least 32 characters
# Example: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_32PLUS_CHAR_STRING

# CORS Origins - Add your frontend URLs
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# =============================================================================
# DATABASE (Required if DATABASE_ENABLED=true)
# =============================================================================
DATABASE_ENABLED=true

# PostgreSQL Configuration
# For AWS RDS, use your RDS endpoint
POSTGRES_REPLACE_ME
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://codeguardians-gateway:CHANGE_ME_SECURE_POSTGRES_PASSWORD@your-rds-endpoint.region.rds.amazonaws.com:5432/codeguardians_db

# Redis Configuration
# For AWS ElastiCache, use your Redis endpoint
REDIS_REPLACE_ME
REDIS_PORT=6379
REDIS_MEMORY=512mb
REDIS_URL=REPLACE_MEyour-redis-endpoint.cache.amazonaws.com:6379/0

# =============================================================================
# CLERK AUTHENTICATION (Optional - Enable when ready)
# =============================================================================
CLERK_ENABLED=false
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key_here

# =============================================================================
# STRIPE PAYMENTS (Optional - Enable when ready)
# =============================================================================
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME_YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_YOUR_AWS_SECRET_KEY
AWS_SESSION_TOKEN=
AWS_PROFILE=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
RELOAD=false
WATCHDOG=false
READ_ONLY=true

# Ports
GATEWAY_PORT=8000
DEBUG_PORT=5678

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
MEMORY_LIMIT=2G
MEMORY_RESERVATION=1G
CPU_LIMIT=2.0
CPU_RESERVATION=1.0

# =============================================================================
# DYNAMIC CONFIGURATION
# =============================================================================
DYNAMIC_CONFIG_FILE=/app/config/runtime.json
