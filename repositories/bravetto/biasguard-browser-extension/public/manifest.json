{
  "manifest_version": 3,
  "name": "BiasGuard",
  "version": "0.1.0",
  "description": "BiasGuard - Powerful Chrome extension that automatically detects and alerts you to potential bias in AI-generated content across websites.",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "BiasGuard",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": [
        "utils/biasGuardUtils.js",
        "bias-detect-script.js",
        "bias-words.js",
        "bias-suggestions.js",
        "injectedPageScript.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://*.biasguards.ai/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
