{
  "module": {
    "id": "marketing_automation_orbit",
    "name": "Marketing Automation Orbit",
    "version": "1.0.0",
    "description": "Full-featured programmatic marketing automation system",
    "author": "AbÃ«ONE",
    "license": "Proprietary"
  },
  "dependencies": {
    "python": ">=3.11",
    "abeone_kernel": ">=0.9.0",
    "guardian_system": ">=1.0.0"
  },
  "python_dependencies": [
    "google-ads-api>=21.0.0",
    "linkedin-api>=2.0.0",
    "sendgrid>=6.10.0",
    "pandas>=2.0.0",
    "numpy>=1.24.0",
    "requests>=2.31.0",
    "python-dotenv>=1.0.0",
    "schedule>=1.2.0",
    "pydantic>=2.0.0"
  ],
  "entry_points": {
    "automation_engine": "src.engine.automation_engine:AutomationEngine",
    "scheduler": "src.scheduler.execution_scheduler:ExecutionScheduler",
    "api": "src.api.main:app"
  },
  "integrations": {
    "abeone_kernel": {
      "adapter": "adapters.kernel_adapter:KernelAdapter",
      "events": [
        "marketing.campaign.created",
        "marketing.campaign.updated",
        "marketing.campaign.completed",
        "marketing.performance.updated",
        "marketing.budget.allocated",
        "marketing.optimization.triggered"
      ]
    },
    "guardian_system": {
      "adapter": "adapters.guardian_adapter:GuardianAdapter",
      "frequencies": [530, 777, 888, 999]
    }
  },
  "structure": {
    "config": "config/",
    "src": "src/",
    "adapters": "adapters/",
    "docs": "docs/",
    "tests": "tests/",
    "deploy": "deploy/"
  }
}

