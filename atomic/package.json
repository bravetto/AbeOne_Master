{
  "name": "@orbital/atomic-design-system",
  "version": "1.0.0",
  "description": "Guardian-Validated Atomic Design System for Orbital Landing Pages - AbëONE Pattern-Aligned",
  "author": "AbëONE",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./atoms/*": {
      "import": "./dist/atoms/*/index.mjs",
      "require": "./dist/atoms/*/index.js",
      "types": "./dist/atoms/*/index.d.ts"
    },
    "./molecules/*": {
      "import": "./dist/molecules/*/index.mjs",
      "require": "./dist/molecules/*/index.js",
      "types": "./dist/molecules/*/index.d.ts"
    },
    "./organisms/*": {
      "import": "./dist/organisms/*/index.mjs",
      "require": "./dist/organisms/*/index.js",
      "types": "./dist/organisms/*/index.d.ts"
    },
    "./templates/*": {
      "import": "./dist/templates/*/index.mjs",
      "require": "./dist/templates/*/index.js",
      "types": "./dist/templates/*/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens/index.mjs",
      "require": "./dist/tokens/index.js",
      "types": "./dist/tokens/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./lib/utils": {
      "import": "./dist/lib/utils.mjs",
      "require": "./dist/lib/utils.js",
      "types": "./dist/lib/utils.d.ts"
    },
    "./lib": {
      "import": "./dist/lib/index.mjs",
      "require": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./registry.json": "./registry.json"
  },
  "files": [
    "dist",
    "atomic",
    "registry.json",
    "README.md"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky install",
    "validate": "node scripts/validate-pattern.js",
    "validate:orbital": "node scripts/validate-orbital-mappings.js"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.554.0",
    "tailwind-merge": "^3.4.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "^14.0.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/blocks": "^7.6.7",
    "@storybook/react": "^7.6.7",
    "@storybook/react-vite": "^7.6.7",
    "@storybook/testing-library": "^0.2.2",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.7",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "atomic-design",
    "react",
    "components",
    "design-system",
    "tailwindcss",
    "landing-page",
    "orbital",
    "guardian",
    "abeone",
    "icp-variants",
    "pattern-aligned"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/orbital/atomic-design-system"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

