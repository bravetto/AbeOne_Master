# AIGuards Backend - Development Environment Template
# This template is safe for local development with placeholder values
# Copy to .env and configure for your local setup

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

ENVIRONMENT=development
VERSION=latest

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

APP_NAME=aiguards-backend
APP_VERSION=1.0.0
SERVICE_NAME=codeguardians-gateway

HOST=0.0.0.0
GATEWAY_PORT=8000
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# SECURITY CONFIGURATION (Development Only)
# =============================================================================

# Development keys - DO NOT use in production!
SECRET_KEY=development-secret-key-must-be-at-least-32-characters-long-for-security
JWT_SECRET_KEY=development-jwt-secret-key-32-characters-minimum
ENCRYPTION_KEY=development-encryption-key-32-characters-minimum

ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Development CORS - allow localhost connections
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION (Development)
# =============================================================================

# Local development database
DATABASE_URL=postgresql+asyncpg://aiguardian:aiguardian-secure-password-2024@postgres:5432/aiguardian_unified

DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=aiguardian
DATABASE_PASSWORD=aiguardian-secure-password-2024
DATABASE_NAME=aiguardian_unified
DATABASE_ENABLED=true

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=aiguardian
POSTGRES_PASSWORD=aiguardian-secure-password-2024
POSTGRES_DB=aiguardian_unified

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION (Development)
# =============================================================================

# Local development Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=aiguardian-redis-password-2024
REDIS_URL=redis://:aiguardian-redis-password-2024@redis:6379/0

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION (Development)
# =============================================================================

# Disabled by default in development
CLERK_ENABLED=false
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=
CLERK_WEBHOOK_SECRET=

STRIPE_ENABLED=false
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true

S3_ENABLED=false
S3_BUCKET_NAME=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_SESSION_TOKEN=
S3_ENDPOINT_URL=

# =============================================================================
# AWS CONFIGURATION (Development)
# =============================================================================

# Disabled in development - use .env file
AWS_SECRETS_ENABLED=false
AWS_SECRETS_NAME=codeguardians-gateway/development
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_PROFILE=

# =============================================================================
# GUARD SERVICES CONFIGURATION
# =============================================================================

TOKENGUARD_URL=http://tokenguard:8001
TRUSTGUARD_URL=http://trustguard:8002
CONTEXTGUARD_URL=http://contextguard:8003
BIASGUARD_URL=http://biasguard:8004
HEALTHGUARD_URL=http://healthguard:8005

BIASGUARD_ENABLED=true
BIASGUARD_ENFORCE_FAIRNESS=true
BIASGUARD_ENFORCE_COMPLIANCE=true
BIASGUARD_ENFORCE_ATTRIBUTION=true
BIASGUARD_AUDIT_RETENTION_DAYS=90
BIASGUARD_MAX_AUDIT_RECORDS=1000000

# Development API key
UNIFIED_API_KEY=development-unified-api-key-change-in-production

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_EXPIRY_MINUTES=60
FILE_CLEANUP_DAYS=30

SESSION_TTL=3600
SESSION_CLEANUP_INTERVAL=300
SESSION_STORAGE_TYPE=redis

GRAFANA_PASSWORD=admin


