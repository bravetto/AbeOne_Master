  },
  "typography": {
    "fonts": {
      "sans": {
        "family": ["Inter", "system-ui", "sans-serif"],
        "weights": [300, 400, 500, 600, 700],
        "usage": "body text, UI elements, general content",
        "googleFont": "https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      },
      "serif": {
        "family": ["Merriweather", "Georgia", "serif"],
        "weights": [300, 400, 700],
        "usage": "long-form content, articles, reading",
        "googleFont": "https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&display=swap"
      },
      "display": {
        "family": ["Playfair Display", "serif"],
        "weights": [400, 600, 700],
        "usage": "headings, titles, branding, emphasis",
        "googleFont": "https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&display=swap"
      }
    },
    "scale": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "lineHeight": {
      "tight": "1.25",
      "snug": "1.375",
      "normal": "1.5",
      "relaxed": "1.625",
      "loose": "2"
    }
  },
  "spacing": {
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "32": "8rem"
    }
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "base": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "lux": "0 8px 32px rgba(0,0,0,0.1)"
  },
  "gradients": {
    "healing": {
      "direction": "135deg",
      "stops": [
        {"color": "#fff7ed", "position": "0%"},
        {"color": "#fef2f2", "position": "50%"},
        {"color": "#faf5ff", "position": "100%"}
      ],
      "css": "linear-gradient(135deg, #fff7ed 0%, #fef2f2 50%, #faf5ff 100%)",
      "usage": "backgrounds, healing spaces, main app backgrounds"
    },
    "lux": {
      "direction": "135deg",
      "stops": [
        {"color": "#a855f7", "position": "0%"},
        {"color": "#f97316", "position": "50%"},
        {"color": "#ef4444", "position": "100%"}
      ],
      "css": "linear-gradient(135deg, #a855f7 0%, #f97316 50%, #ef4444 100%)",
      "usage": "accent gradients, energy, premium features"
    },
    "sidebar": {
      "direction": "to bottom",
      "stops": [
        {"color": "#1e1b4b", "position": "0%"},
        {"color": "#312e81", "position": "50%"},
        {"color": "#1e1b4b", "position": "100%"}
      ],
      "css": "linear-gradient(to bottom, #1e1b4b, #312e81, #1e1b4b)",
      "usage": "sidebar backgrounds, navigation"
    },
    "textHealing": {
      "direction": "135deg",
      "stops": [
        {"color": "#f97316", "position": "0%"},
        {"color": "#a855f7", "position": "50%"},
        {"color": "#ef4444", "position": "100%"}
      ],
      "css": "linear-gradient(135deg, #f97316 0%, #a855f7 50%, #ef4444 100%)",
      "usage": "text gradients, headings, branding"
    }
  },
  "components": {
    "sidebar": {
      "width": "256px",
      "background": "gradient.sidebar",
      "border": "1px solid lux-700",
      "padding": {
        "header": "24px",
        "nav": "16px",
        "footer": "16px"
      }
    },
    "topbar": {
      "background": "rgba(255, 255, 255, 0.9)",
      "backdrop": "blur(8px)",
      "border": "1px solid rgba(168, 85, 247, 0.1)",
      "padding": "16px 24px",
      "height": "auto"
    },
    "card": {
      "background": "rgba(255, 255, 255, 0.8)",
      "backdrop": "blur(8px)",
      "borderRadius": "24px",
      "padding": "40px",
      "shadow": "shadow.lux",
      "border": "1px solid rgba(168, 85, 247, 0.1)"
    },
    "button": {
      "primary": {
        "background": "gradient.lux",
        "color": "white",
        "padding": "16px 32px",
        "borderRadius": "50px",
        "fontWeight": "600",
        "shadow": "shadow.xl"
      },
      "secondary": {
        "background": "warm-500",
        "color": "white",
        "padding": "12px 24px",
        "borderRadius": "12px"
      }
    }
  },
  "animations": {
    "pulse": {
      "duration": "2s",
      "timing": "infinite",
      "keyframes": [
        {"opacity": "1", "offset": "0%"},
        {"opacity": "0.5", "offset": "50%"},
        {"opacity": "1", "offset": "100%"}
      ]
    },
    "fadeIn": {
      "duration": "0.3s",
      "timing": "ease-in-out",
      "keyframes": [
        {"opacity": "0", "offset": "0%"},
        {"opacity": "1", "offset": "100%"}
      ]
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  }
}

